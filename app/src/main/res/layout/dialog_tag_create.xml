<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.TextInputLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tag_create_input_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/tag_create_input_padding_side"
    android:paddingStart="@dimen/tag_create_input_padding_side"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:counterMaxLength="@integer/tag_name_max_count"
    app:counterEnabled="true"
    app:hintEnabled="false"
    >

    <EditText
        android:id="@+id/tag_create_edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/tag_create_edit_hint"
        android:lines="1"
        android:maxLines="1"
        />

</android.support.design.widget.TextInputLayout>
