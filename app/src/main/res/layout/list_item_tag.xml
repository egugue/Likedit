<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="dto"
            type="com.egugue.licol.application.tag.TagTweetCountDto"
            />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16sp"
        >

        <TextView
            android:id="@+id/list_item_tag_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:text="@{dto.tag.name}"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="Android"
            />

        <TextView
            android:id="@+id/list_item_tweet_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#70000000"
            android:textSize="14sp"
            app:text_homeTagRelatedTweetCount="@{dto.tweetCount}"
            tools:text="100個のツイート"
            />

    </LinearLayout>
</layout>